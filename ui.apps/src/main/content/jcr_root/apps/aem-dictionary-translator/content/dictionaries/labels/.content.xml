<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            jcr:mixinTypes="[sling:VanityPath]"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/shell/collectionpage"
            sling:vanityPath="/tools/translation/dictionaries/labels.html"
            jcr:title="Translate Dictionary"
            backHref="/tools/translation/dictionaries.html"
            modeGroup="language-list"
            consoleId="translation"
            targetCollection=".language-list">
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                    categories="[coralui3,granite.ui.coral.foundation]"/>
        </head>
        <breadcrumbs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aem-dictionary-translator/datasource/breadcrumbs"/>
        <actions jcr:primaryType="nt:unstructured">
            <primary jcr:primaryType="nt:unstructured">
                <create-label
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="foundation.dialog"
                        target="#translation-listview"
                        icon="add"
                        variant="primary"
                        text="Create Label">
                    <data jcr:primaryType="nt:unstructured"
                          src.uritemplate="/apps/aem-dictionary-translator/content/granite/dialog/dictionary/label/create.html${requestPathInfo.suffix}"/>
                    <granite:rendercondition
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/renderconditions/simple"
                            expression="${granite:contains(granite:relativeParent(requestPathInfo.suffix, 0), '/content')}"/>
                </create-label>
            </primary>
            <selection jcr:primaryType="nt:unstructured">
                <edit
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        activeSelectionCount="single"
                        action="foundation.dialog"
                        actionConfigName="granite/ui/shell/actions/edit"
                        target="#translation-listview"
                        icon="edit"
                        variant="actionBar"
                        text="Edit">
                    <data jcr:primaryType="nt:unstructured"
                          src.uritemplate="/apps/aem-dictionary-translator/content/granite/dialog/dictionary/label/update.html?label={+item}"/>
                    <granite:rendercondition
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/renderconditions/simple"
                            expression="${granite:contains(granite:relativeParent(requestPathInfo.suffix, 0), '/content')}"/>
                </edit>
                <delete
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="foundation.dialog"
                        actionConfigName="granite/ui/shell/actions/delete"
                        target="#translation-listview"
                        icon="delete"
                        variant="actionBar"
                        text="Delete">
                    <data jcr:primaryType="nt:unstructured"
                          src.uritemplate="/apps/aem-dictionary-translator/content/granite/dialog/dictionary/label/delete.html?labels={+item}"/>
                    <granite:rendercondition
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/renderconditions/simple"
                            expression="${granite:contains(granite:relativeParent(requestPathInfo.suffix, 0), '/content')}"/>
                </delete>
                <publish
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="foundation.dialog"
                        actionConfigName="granite/ui/shell/actions/publish"
                        target="#translation-listview"
                        icon="publish"
                        variant="actionBar"
                        text="Publish">
                    <data jcr:primaryType="nt:unstructured"
                          src.uritemplate="/apps/aem-dictionary-translator/content/granite/dialog/dictionary/label/publish.html?labels={+item}"/>
                    <granite:rendercondition
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/renderconditions/simple"
                            expression="${granite:contains(granite:relativeParent(requestPathInfo.suffix, 0), '/content')}"/>
                </publish>
            </selection>
        </actions>
        <views jcr:primaryType="nt:unstructured">
            <table
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/table"
                    modeGroup="language-list"
                    granite:class="language-list"
                    granite:rel="language-list"
                    granite:id="translation-listview"
                    layoutId="list"
                    limit="{Long}50"
                    selectionMode="${granite:contains(granite:relativeParent(requestPathInfo.suffix, 0), '/content') ? 'row' : 'none'}">
                <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aem-dictionary-translator/datasource/label"
                        itemResourceType="aem-dictionary-translator/components/label"
                        limit="${empty requestPathInfo.selectors[1] ? 50 : requestPathInfo.selectors[1]}"
                        offset="${requestPathInfo.selectors[0]}"/>
                <columnsdatasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aem-dictionary-translator/datasource/label"/>
            </table>
        </views>
    </jcr:content>
</jcr:root>
