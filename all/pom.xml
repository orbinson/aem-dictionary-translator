<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>be.orbinson.aem</groupId>
        <artifactId>aem-dictionary-translator</artifactId>
        <version>1.6.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>aem-dictionary-translator.all</artifactId>
    <packaging>content-package</packaging>
    <name>All</name>
    <description>All package for the Dictionary Translator</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.jackrabbit</groupId>
                <artifactId>filevault-package-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <group>be.orbinson.aem</group>
                    <packageType>container</packageType>
                    <!-- all sub packages have been validated already -->
                    <skipSubPackageValidation>true</skipSubPackageValidation>
                    <embeddedTarget>apps/aem-dictionary-translator-packages/application/install</embeddedTarget>
                    <!-- list of embeds relevant for both container packages (classic and cloud) -->
                    <embeddeds>
                        <embedded>
                            <artifactId>aem-dictionary-translator.ui.apps</artifactId>
                        </embedded>
                        <embedded>
                            <artifactId>aem-dictionary-translator.core</artifactId>
                        </embedded>
                        <embedded>
                            <artifactId>aem-dictionary-translator.ui.config</artifactId>
                        </embedded>
                        <embedded>
                            <artifactId>commons-csv</artifactId>
                        </embedded>
                    </embeddeds>
                </configuration>
                <executions>
                    <!-- the cloud package additionally contains the bundle fragment aem-dictionary-translator.core.cloud -->
                    <execution>
                        <id>default-generate-metadata</id>
                        <goals>
                            <goal>generate-metadata</goal>
                        </goals>
                        <configuration>
                            <embeddeds combine.children="append">
                                <embedded>
                                    <artifactId>aem-dictionary-translator.core.cloud</artifactId>
                                </embedded>
                            </embeddeds>
                        </configuration>
                     </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.wcm.maven.plugins</groupId>
                <artifactId>wcmio-content-package-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <id>auto-clean</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.adobe.aem</groupId>
                <artifactId>aemanalyser-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>aem-analyser</id>
                        <goals>
                            <goal>project-analyse</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>autoInstallSinglePackage</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.wcm.maven.plugins</groupId>
                        <artifactId>wcmio-content-package-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-package</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>classic</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <!-- add package for AEM 6.5 with classifier "classic" -->
                        <groupId>org.apache.jackrabbit</groupId>
                        <artifactId>filevault-package-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>classic-generate-metadata</id>
                                <goals>
                                    <goal>generate-metadata</goal>
                                </goals>
                                <configuration>
                                    <classifier>classic</classifier>
                                </configuration>
                            </execution>
                            <execution>
                                <id>classic-package</id>
                                <goals>
                                    <goal>package</goal>
                                </goals>
                                <configuration>
                                    <classifier>classic</classifier>
                                </configuration>
                            </execution>
                            <execution>
                                <id>default-validate-package</id>
                                <configuration>
                                    <!-- validate both generated packages in one execution -->
                                    <classifier>classic</classifier>
                                </configuration>
                            </execution>
                          </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>be.orbinson.aem</groupId>
            <artifactId>aem-dictionary-translator.ui.apps</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>be.orbinson.aem</groupId>
            <artifactId>aem-dictionary-translator.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>be.orbinson.aem</groupId>
            <artifactId>aem-dictionary-translator.core.cloud</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>be.orbinson.aem</groupId>
            <artifactId>aem-dictionary-translator.ui.config</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-csv</artifactId>
        </dependency>
    </dependencies>
</project>
